{
  "foundryLicenseKey": "${FOUNDRY_LICENSE_KEY}",
  "foundryAdminPassword": "${FOUNDRY_ADMIN_PASSWORD}",
  "docker": {
    "imagePrefix": "simulacrum-foundry-test",
    "portRange": {
      "start": 30000,
      "end": 30010
    },
    "maxConcurrentInstances": 3,
    "dataPath": "/data",
    "moduleMountPath": "/modules/simulacrum",
    "systemsMountPath": "/systems"
  },
  "puppeteer": {
    "headless": true,
    "timeout": 30000,
    "slowMo": 0,
    "devtools": false,
    "viewport": {
      "width": 1920,
      "height": 1080
    }
  },
  "bootstrap": {
    "timeouts": {
      "containerStart": 30000,
      "foundryReady": 60000,
      "worldCreation": 45000,
      "moduleInstall": 30000,
      "gmLogin": 60000
    },
    "retries": {
      "containerStart": 3,
      "foundryConnection": 5
    }
  },
  "systems": ["dnd5e", "pf2e"]
}