<div class="simulacrum-chat">
  <div class="simulacrum-messages">
    <!-- Messages will be dynamically added here -->
  </div>
  
  <div class="simulacrum-input-area">
    <textarea 
      class="simulacrum-input" 
      placeholder="{{placeholder}}"
    ></textarea>
    
    <div class="simulacrum-buttons">
      <button class="simulacrum-button primary simulacrum-submit">
        {{submitText}}
      </button>
      
      <button class="simulacrum-button secondary simulacrum-clear">
        {{clearText}}
      </button>
      
      <button class="simulacrum-button secondary simulacrum-settings">
        {{settingsText}}
      </button>
    </div>
  </div>
</div>