{{!-- Task Tracker - Shown during active tasks --}}
<div class="task-tracker" style="display: none;">
  <div class="task-tracker-header">
    <i class="fa-solid fa-circle-notch fa-spin task-tracker-icon"></i>
    <span class="task-tracker-step">Starting...</span>
    <span class="task-tracker-progress"></span>
    <button type="button" class="task-tracker-toggle" title="Expand/Collapse">
      <i class="fa-solid fa-chevron-down"></i>
    </button>
  </div>
  <div class="task-tracker-body">
    <h4 class="task-tracker-name"></h4>
    <p class="task-tracker-goal"></p>
    <ul class="task-tracker-steps"></ul>
  </div>
</div>
