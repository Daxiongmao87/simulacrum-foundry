{
  "name": "simulacrum",
  "version": "0.1.0",
  "type": "module",
  "description": "An AI-powered assistant for FoundryVTT campaign document management",
  "main": "scripts/simulacrum.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint scripts/ --fix",
    "lint:check": "eslint scripts/",
    "lint:json": "eslint . --ext .json --fix",
    "lint:json:check": "eslint . --ext .json",
    "format": "prettier --write scripts/ tests/ *.json *.md",
    "format:check": "prettier --check scripts/ tests/ *.json *.md",
    "prepare": "husky install",
    "package:module": "node tools/package-module.js",
    "launch:foundry": "node tools/launch-foundry.js",
    "dead-code": "knip",
    "dead-code:fix": "knip --fix",
    "unused": "unimported",
    "deploy:module": "node tools/deploy-to-instance.js",
    "build:foundry-image": "node tools/build-foundry-image.js",
    "run:foundry": "node tools/run-foundry-detached.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsonc": "^2.20.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "knip": "^5.64.0",
    "prettier": "^3.2.5",
    "unimported": "^1.31.0"
  },
  "keywords": [
    "foundryvtt",
    "ai",
    "assistant",
    "campaign",
    "documents"
  ],
  "author": "Your Name",
  "license": "MIT"
}
